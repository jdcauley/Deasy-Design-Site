
.container
  .row
    .col-lg-12
      
    .col-lg-12
      #feature-carousel.carousel.slide(data-ride="carousel")
        ol.carousel-indicators
          li.active(data-target="#feature-carousel", data-slide-to="0")
          li(data-target="#feature-carousel", data-slide-to="1")
          li(data-target="#feature-carousel", data-slide-to="2")

        .carousel-inner
          .item.active
            img.center(src="/assets/images/#{ features.first.image }")
          .item
            img.center(src="/assets/images/#{ features.second.image }")
          .item
            img.center(src="/assets/images/#{ features.third.image }")
      
      each post, slug in public.design._data
        != partial("/" + slug, post)

